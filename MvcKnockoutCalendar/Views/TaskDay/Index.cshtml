@model IEnumerable<MvcKnockoutCalendar.Models.TaskDay>

@{
    ViewBag.Title = "Tasks for the Day";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Day
        </th>
        <th>
            Tasks
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@String.Format("{0:g}", item.Day)
        </td>
        <td>
			@(item.Tasks == null ? "None" : item.Tasks.Count.ToString())
        </td>
    </tr>
}

</table>

